{% extends '_layouts/base.njk' %}

{% block page_title %}Media{% endblock %}

{% block content %}

<div class="container">
  <h1 class="mediaheader">In The Media</h1> 
  <div class="row">
    <div class="col-sm-12 col-md-4 left-content">
          <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title text-center"><i class="fa fa-twitter-square" aria-hidden="true"></i>| Latest Tweets |</h3>
            </div>
            <div class="panel-body">
              <a class="twitter-timeline" data-height="750" href="https://twitter.com/QueenWillRock?ref_src=twsrc%5Etfw">Tweets by QueenWillRock</a> 
            </div>
          </div>
    </div>
    <div class="col-sm-12 col-md-8">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <h3 class="mediaheader text-center">| Photos and Video |</h3>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block img-fluid carousel-picture" src="../img/queen-band-early.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid carousel-picture" src="../img/queen-live-on-stage.jpg" alt="Second slide">
            </div>
          </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="queen-video" src="https://www.youtube.com/embed/kTB7x9AfWNU" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="text-center">
          <a class="btn btn-dark" href="https://www.youtube.com/user/queenofficial/featured" role="button" target="_blank">More Videos</a>
        </div>
    </div>
  </div>
</div>

<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>

{% endblock %}