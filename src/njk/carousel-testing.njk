{% extends '_layouts/base.njk' %}

{% block page_title %}Queen{% endblock %}

{% block content %}


<div class="container">
  <div id="carouselExampleControls" class="carousel slide carousel-testing" data-ride="carousel">
    <div class="carousel-inner">
      {% for disc in data.discography %}
      {% if loop.first %}
      <div class="carousel-item active">
        <img class="d-block img-fluid carousel-picture" src="img/discs/{{ disc.image }}" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <p>{{ disc.title }} | {{ disc.year }}</p>
        </div>
      </div>
      {% else %}
      <div class="carousel-item">
        <img class="d-block img-fluid carousel-picture" src="img/discs/{{ disc.image }}" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <p>{{ disc.title }} | {{ disc.year }}</p>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
</div>

{% endblock %}